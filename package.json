{
  "name": "ardrive-desktop",
  "productName": "ArDrive",
  "version": "0.1.12",
  "description": "ArDrive - Secure, Permenant Storage",
  "main": "public/electron.js",
  "scripts": {
    "react-start": "craco start",
    "react-build": "craco build",
    "react-test": "craco test",
    "react-eject": "craco eject",
    "electron-start": "electron .",
    "electron-build": "electron-builder",
    "build": "yarn react-build && yarn electron-build",
    "build-dev": "yarn react-build && yarn electron-build --dir",
    "start": "concurrently --kill-others \"yarn react-start\" \"wait-on http://localhost:3000 && yarn electron-start\""
  },
  "build": {
    "productName": "ArDrive",
    "appId": "com.ardrive.ArDrive",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "ardrive",
      "repo": "ardrive-desktop",
      "private": false
    }
  },
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ardrive/ardrive-desktop.git"
  },
  "author": {
    "name": "ArDrive DevTeam",
    "email": "info@ardrive.io",
    "url": "https://ardrive.io"
  },
  "contributors": [],
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ardrive/ardrive-desktop/issues"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "wait-on": "^5.2.0"
  },
  "dependencies": {
    "@craco/craco": "^5.7.0",
    "@reduxjs/toolkit": "^1.4.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.3",
    "electron-is-dev": "^1.2.0",
    "i18next": "^19.8.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.7.3",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.2.0",
    "typescript": "~3.7.2"
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=4.x",
    "yarn": ">=0.21.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": []
}
