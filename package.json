{
  "name": "ardrive-desktop",
  "productName": "ArDrive",
  "description": "ArDrive - Secure, Permenant Storage",
  "scripts": {
    "main-start": "cd ./packages/main && yarn start",
    "renderer-start": "cd ./packages/renderer && yarn start",
    "main-build": "cd ./packages/main && yarn build",
    "main-build-dev": "cd ./packages/main && yarn build-dev",
    "renderer-build": "cd ./packages/renderer && yarn build",
    "build": "yarn renderer-build && yarn main-build",
    "build-dev": "yarn renderer-build && yarn main-build-dev",
    "start": "concurrently --kill-others \"yarn renderer-start\" \"wait-on http://localhost:3000 && yarn main-start\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ardrive/ardrive-desktop.git"
  },
  "author": {
    "name": "ArDrive DevTeam",
    "email": "info@ardrive.io",
    "url": "https://ardrive.io"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ardrive/ardrive-desktop/issues"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "wait-on": "^5.2.0"
  },
  "dependencies": {}
}